div(class="bg-white shadow rounded-lg")
    img(class="object-cover h-72 w-full" src=`/uploads/${propiedad.imagen}` alt=`imagen de la propiedad ${propiedad.titulo}`)
    div(class="p-5 space-y-5")
        h1(class="text-xl font-bold")= propiedad.titulo
        p(class="text-sm text-gray-600") 
            | Habitaciones:  
            span(class="text-gray-800 font-bold")= propiedad.habitaciones
        p(class="text-sm text-gray-600") 
            | WC:  
            span(class="text-gray-800 font-bold")= propiedad.wc
        p(class="text-sm text-gray-600") 
            | Precio:  
            span(class="text-gray-800 font-bold")= propiedad.precio.nombre
        if propiedad.usuario
            p(class="text-sm text-gray-600") 
                | Alias del Usuario:  
                span(class="text-gray-800 font-bold")= propiedad.usuario.alias
            p(class="text-sm text-gray-600") 
                | Foto del Usuario:
                span(class="text-gray-800 font-bold")
                    img(src=`/uploads/${propiedad.usuario.foto}` alt="Foto de usuario" class="w-20")
        else
            p(class="text-sm text-gray-600") Usuario no disponible
        a(href=`/propiedad/${propiedad.id}` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase rounded") Ver Propiedad
